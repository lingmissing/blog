$siteAColor = #ffffff
$siteABgColor = #de4c4f
$siteDescColor = #9e9e9e

.blog-header
  line-height 1.8rem
  &.fixed 
    position fixed
    top 0
    left 50%
    transform translatex(-50%)
    width 1170px
    background #fcfcfc
    padding-top 10px
    z-index 1
    .header-shadow
      position absolute
      top 45px
      width 100%
      height 50px
      z-index 1
      pointer-events none
      background-image linear-gradient(#fcfcfc, rgba(249, 249, 251, 0))
      opacity 1
      transition opacity 0.3s ease 0s
    .site-branding
      float left
      margin 0
      .site-title
        margin 0 !important
      .site-description
        display none
    .site-navigation 
      text-align left
      line-height 36px

  .site-branding
    text-align center
    margin-bottom 2rem
    font-family "Open Sans", arial, sans-serif
    letter-spacing 0.1em
    text-transform uppercase

    .site-title
      margin 0
      font-size 1.4rem

      a
        display inline-block
        color $siteAColor
        font-weight bolder
        background-color $siteABgColor
        line-height 3rem
        height 3rem
        padding 0 1rem
        -webkit-transition padding 0.3s ease-out
        transition padding 0.3s ease-out

        &:hover
          padding: 0 1.5rem

    .site-description
      color $siteDescColor
      font-size 1.3rem
      margin 1rem 0 0

  .site-navigation
    text-align center

    ul
      list-style none
      padding 0
      margin 0
      font-size 1.6em

      li
        display inline-block
        margin 0 0.5rem

        a
          display block
          color $siteABgColor
          font-size 1.4rem
          line-height 2rem
          padding 0 1rem
