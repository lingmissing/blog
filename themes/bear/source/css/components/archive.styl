article.archive
  padding 0
  margin 2em auto

.archive-post
  text-align left
  margin 2em auto

  .archive-title
    font-size 1.4em
    line-height 1
    position relative
    color #212121
    margin 0

    a
      color #333

      span
        padding-bottom 3px
    

      &:hover
        color #212121

        span
          background-size calc(100% + 1px) 100%
          border-bottom 2px solid transparent
          background-repeat no-repeat
          background-position -1px calc(100% + 3px)
          animation ani 0.4s ease 0s 1 normal forwards running
  time
    font-style italic

    a
      font-size 1.4rem
      color #9e9e9e

      &:before
        content '#'
      &:hover
        color #de4c4f

