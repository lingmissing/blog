$hackerRed = #de4c4f
$hackerGray = #9e9e9e

article
  .tags-cloud
    width 100%
    margin 8rem 0
    text-align center
    line-height 2rem

  .tags-cloud > spannot(last-child)
    margin-right 3rem

  .tags-cloud > span
    display inline-block

  .tags-cloud > span > span
    line-height 1
    vertical-align middle

  .archive-tags

  .archive-tags > spannot(last-child)
    margin-right 3rem

  .archive-tags > span
    display inline-block

  .archive-tags > span > span
    line-height 1
    vertical-align middle

  .archive-tags, .tags-cloud
    margin 8rem 0
    font-size 1.3rem
    color #9e9e9e

    a
      color $hackerGray
      &:hover
        color $hackerRed

    i
      vertical-align middle
      color #9e9e9e
      margin-right 0.5rem

    .post-tags
      display inline-block
      background #b8bfc2
      padding 0.0em 0.5em
      border-radius 1em
      text-indent 0
      line-height 1.7em
      transition all 0.3s
      margin-bottom 1em
      box-sizing border-box
      &:hover 
        opacity 0.8
        background #de4c4f
        a 
          color #fff
      a
        color white
        &:before
          content "#"

        &:not(:last-of-type):after
          content ","
          padding-right 5px
